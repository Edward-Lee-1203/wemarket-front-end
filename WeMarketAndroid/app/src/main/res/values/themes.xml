<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="WeMarketStyles.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar"
        >
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondaryLight</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/lightGray</item>

    </style>
    <style name="WeMarketStyles.Text.h1" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.Text.h2" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.medium</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.Text.h2.large" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.xmedium</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.Text.h3" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.small</item>
        <item name="android:textColor">@color/font_secondary</item>
    </style>
    <style name="WeMarketStyles.Text.h3.large" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.xsmall</item>
        <item name="android:textColor">@color/font_secondary</item>
    </style>
    <style name="WeMarketStyles.Text.h3.primary" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.small</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.Text.h3.strikeThrough" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.small</item>
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:foreground">@drawable/foreground_strike_through_horizontal</item>
    </style>
    <style name="WeMarketStyles.Text.h4" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/WeMarket.size.ssmall</item>
        <item name="android:textColor">@color/font_secondary</item>
    </style>
    <style name="WeMarketStyles.Text.h1.center" parent="@style/WeMarketStyles.Text.h1">
        <item name="android:gravity">center</item>
    </style>
    <style name="WeMarketStyles.Text.h2.center" parent="@style/WeMarketStyles.Text.h2">
        <item name="android:gravity">center</item>
    </style>
    <style name="WeMarketStyles.Text.h3.center" parent="@style/WeMarketStyles.Text.h3">
        <item name="android:gravity">center</item>
    </style>
    <style name="WeMarketStyles.TextInputLayout" parent="">
        <item name="android:textSize">@dimen/WeMarket.size.small</item>
        <item name="android:textColor">@color/font_primary</item>
        <item name="boxBackgroundColor">@color/gray</item>
        <item name="suffixTextColor">@color/font_primary</item>
        <item name="hintAnimationEnabled">false</item>
    </style>
    <style name="WeMarketStyles.TextInputEditText" parent="">
        <item name="android:textSize">@dimen/WeMarket.size.small</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.EditTextLogin" parent="">

        <item name="android:background">@color/gray</item>
        <item name="android:textColorHint">@color/font_secondary</item>
        <item name="android:paddingLeft">@dimen/WeMarket.size.large</item>
        <item name="android:paddingTop">@dimen/WeMarket.space.medium</item>
        <item name="android:paddingRight">@dimen/WeMarket.space.small</item>
        <item name="android:paddingBottom">@dimen/WeMarket.space.medium</item>
        <item name="android:textSize">@dimen/WeMarket.size.xsmall</item>
        <item name="android:textColor">@color/font_primary</item>
    </style>
    <style name="WeMarketStyles.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="fabCustomSize">@dimen/WeMarket.size.large</item>
    </style>
    <style name="WeMarketStyles.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="background">@color/primary</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="WeMarketStyles.Button.hasPadding" parent="WeMarketStyles.Button">
        <item name="android:paddingTop">@dimen/WeMarket.space.small</item>
        <item name="android:paddingBottom">@dimen/WeMarket.space.small</item>
        <item name="android:paddingLeft">@dimen/WeMarket.space.medium</item>
        <item name="android:paddingRight">@dimen/WeMarket.space.medium</item>
    </style>
    <style name="WeMarketStyles.CardView" parent="">
        <item name="cardCornerRadius">@dimen/WeMarket.size.cardBorderRadius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="elevation">@dimen/cardview_default_elevation</item>
    </style>
    <style name="WeMarketStyles.CardView.padding" parent="WeMarketStyles.CardView">
        <item name="android:paddingTop">@dimen/WeMarket.space.small</item>
        <item name="android:paddingBottom">@dimen/WeMarket.space.small</item>
        <item name="android:paddingLeft">@dimen/WeMarket.space.small</item>
        <item name="android:paddingRight">@dimen/WeMarket.space.small</item>
    </style>
    <style name="WeMarketStyles.CardView.yellow" parent="WeMarketStyles.CardView">
        <item name="cardBackgroundColor">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">4dp</item>
        <item name="contentPaddingBottom">4dp</item>
    </style>
    <style name="WeMarketStyles.ImageView" parent="">
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="WeMarketStyles.Switch" parent="">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/lightGray</item>
    </style>
    <style name="WeMarketStyles.padding.small" parent="">
        <item name="android:paddingTop">@dimen/WeMarket.space.small</item>
        <item name="android:paddingBottom">@dimen/WeMarket.space.small</item>
        <item name="android:paddingLeft">@dimen/WeMarket.space.small</item>
        <item name="android:paddingRight">@dimen/WeMarket.space.small</item>
    </style>
    <style name="circle">
        <item name="cornerSize">50%</item>
    </style>

</resources>