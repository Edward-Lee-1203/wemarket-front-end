<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.buyer.ChooseFoodFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_buyer_quick_filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/WeMarket.space.small"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_buyer_today_foods"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linear_checkout_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_buyer_quick_filters"
        android:padding="@dimen/WeMarket.space.small"
        />
    <LinearLayout
        android:id="@+id/linear_checkout_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/WeMarket.size.actionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        />
</androidx.constraintlayout.widget.ConstraintLayout>