<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.shipper.HomeFragment"
    android:layout_marginStart="@dimen/WeMarket.space.small"
    android:layout_marginEnd="@dimen/WeMarket.space.medium">

    <TextView
        android:id="@+id/text_shipper_title"
        style="@style/WeMarketStyles.Text.h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipper_home_greeting_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/WeMarket.space.medium"/>

    <TextView
        android:id="@+id/text_shipper_subtitle"
        style="@style/WeMarketStyles.Text.h3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shipper_home_greeting_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_shipper_title"
        android:layout_marginTop="@dimen/WeMarket.space.small"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_shipper_drive_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_shipper_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/WeMarket.space.small"
        style="@style/WeMarketStyles.CardView"
        app:cardBackgroundColor="@color/primary">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/WeMarket.space.small"
            android:paddingBottom="@dimen/WeMarket.space.small"
            android:paddingLeft="@dimen/WeMarket.space.medium"
            android:paddingRight="@dimen/WeMarket.space.medium"
            style="@style/WeMarketStyles.CardView"
            android:backgroundTint="@color/primary">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Drive mode"
                style="@style/WeMarketStyles.Text.h3.large"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/text_drive_mode_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On"
                style="@style/WeMarketStyles.Text.h3.large"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_drive_mode"
                style="@style/WeMarketStyles.Switch"
                app:thumbTint="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintEnd_toStartOf="@id/text_drive_mode_on"
                card_view:track="@drawable/switch_track_custom"
                android:checked="false"
                android:layout_marginEnd="@dimen/WeMarket.space.small"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_drive_mode_off"
                android:text="Off"
                style="@style/WeMarketStyles.Text.h3.large"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_drive_mode"
                android:layout_marginEnd="@dimen/WeMarket.space.small"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_shipper_drive_mode"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:showDividers="middle"
        android:divider="@drawable/empty_wide_divider"
        android:layout_marginTop="@dimen/WeMarket.space.medium"
        android:paddingBottom="@dimen/WeMarket.space.medium"
        android:background="@color/white">

        <ImageView
            android:id="@+id/image_shipper_home"
            android:layout_width="match_parent"
            android:layout_height="@dimen/WeMarket.size.coverPhoto"
            android:scaleType="fitCenter"
            android:src="@drawable/delivery_image" />
        <TextView
            android:id="@+id/text_shipper_home_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WeMarketStyles.Text.h2.center"
            android:text="@string/shipper_zero_orders_message"
            android:layout_marginStart="@dimen/WeMarket.space.large"
            android:layout_marginEnd="@dimen/WeMarket.space.large"/>
        <TextView
            android:id="@+id/text_shipper_home_submessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/WeMarketStyles.Text.h3.center"
            android:text="@string/shipper_zero_orders_submessage"/>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/WeMarketStyles.CardView"
            android:backgroundTint="@color/primary">
            <Button
                android:id="@+id/button_shipper_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's start"
                style="@style/WeMarketStyles.Button"
                android:textSize="@dimen/WeMarket.size.xsmall"
                android:paddingLeft="@dimen/WeMarket.space.large"
                android:paddingRight="@dimen/WeMarket.space.large"
                android:paddingTop="@dimen/WeMarket.space.small"
                android:paddingBottom="@dimen/WeMarket.space.small"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>